{
  "name": "node-react",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev-localdb": "concurrently \"mongod\" \"npm run server\" \"npm run client\"",
    "server": "env-cmd ./config/dev.env nodemon index.js",
    "start": "node index.js"
  },
  "dependencies": {
    "@sendgrid/mail": "6.3.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.1",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.6",
    "mongoose-unique-validator": "^2.0.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "env-cmd": "8.0.2",
    "eslint-plugin-react": "^7.14.3",
    "prettier": "^1.18.2"
  }
}
